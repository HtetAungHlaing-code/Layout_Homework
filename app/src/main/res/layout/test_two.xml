<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John McDonald"
        android:textStyle="bold"
        android:textColor="#0f24e2"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:src="@drawable/photo1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los Angles,CA"
        android:textSize="20dp"
        android:textColor="#0f24e2"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        />
    <ImageView
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:src="@drawable/photo2"
        app:layout_constraintLeft_toRightOf="@+id/text1"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:id="@+id/text3"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Follow"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_button"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        />
    <TextView
        android:id="@+id/text4"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:text="34"
        android:textColor="#0f24e2"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textColor="#0f24e2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/text6"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="1256"
        android:textColor="#0f24e2"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text4"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text7"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Followers"
        android:textColor="#0f24e2"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text6"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/p1"
        android:layout_width="85dp"
        android:layout_height="200dp"
        android:src="@drawable/photo3"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/p2"
        android:layout_width="85dp"
        android:layout_height="200dp"
        android:src="@drawable/photo4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        app:layout_constraintLeft_toRightOf="@+id/p1"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/p3"
        android:layout_width="85dp"
        android:layout_height="200dp"
        android:src="@drawable/photo5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/p2"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/p4"
        android:layout_width="85dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/p3"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/photo6"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon1"
        app:layout_constraintTop_toBottomOf="@+id/p1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p3"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p4"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/one"
        android:layout_marginTop="10dp"
        />
   <TextView
       android:id="@+id/three"
       android:layout_width="70dp"
        android:layout_height="30dp"
       app:layout_constraintTop_toBottomOf="@+id/two"
       android:text="About"
       android:textStyle="bold"
       android:textSize="20dp"
       android:textColor="#0f24e2"
       android:layout_marginTop="10dp"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginLeft="10dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="John Martin McDonnell (born 8 September 1951) is a British politician serving as the Member of Parliament (MP) for Hayes and Harlington since 1997. A member of the Labour Party, he has been Shadow Chancellor of the Exchequer in the Shadow Cabinet of Jeremy Corbyn since 2015.
Born: 8 September 1951, Liverpool
Profession: Politician"
        android:textSize="15dp"
        android:textColor="#0f24e2"
        app:layout_constraintTop_toBottomOf="@+id/three"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>