<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_button"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">


    <ImageView
        android:id="@+id/imageOne"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rectangle1"
        android:src="@drawable/flowers" />

    <TextView
        android:id="@+id/textOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:text="MY LOVE,"
        android:textSize="20dp"
        android:textColor="#0f24e2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageOne"

        />

    <TextView
        android:id="@+id/textTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text="YOU LIKE A FLOWER"
        android:textSize="20dp"
        android:textColor="#0f24e2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textOne" />

    <TextView
        android:id="@+id/textThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="*Editor's Choice"
        android:textColor="#ff0000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textTwo" />

    <TextView
        android:id="@+id/textFour"
        android:layout_width="350dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="We're all a little weird.And life is a little weird.And when we find someone whose weirdness is compatible with ours,we join up with them and fail into mutually satisfying weirdness and call it love-true love."
        android:textColor="#0f24e2"
        app:layout_constraintTop_toBottomOf="@+id/textThree"
        />
    <TextView
        android:id="@+id/textFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 99.9"
        android:textColor="#0f24e2"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textFour"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ORDER NOW"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/rectangle"
        app:layout_constraintLeft_toRightOf="@+id/textFive"
        app:layout_constraintTop_toBottomOf="@+id/textFour"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>